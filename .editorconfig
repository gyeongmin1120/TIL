root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
max_line_length = 100
trim_trailing_whitespace = true

[*.{java,groovy,gradle}]
indent_size = 2
indent_style = space

[*.xml]
indent_style = space

[*.js]
indent_size = 2
indent_style = space

[*.ts]
indent_size = 2
indent_style = space

[*.{hbs,html}]
indent_size = 2
indent_style = space

[*.css]
indent_size = 2
indent_style = space

[*.{bat,cmd}]
end_of_line = crlf
